# Telegram Bot Configuration (Required for notifications)
BOT_TOKEN=your_telegram_bot_token_here
CHAT_ID=your_telegram_chat_id_here

# Spotify API Configuration (Required for Spotify scripts)
SPOTIPY_CLIENT_ID=your_spotify_client_id_here
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIPY_REDIRECT_URI=http://localhost:8765/callback

# OneDrive Service Configuration (Optional)
ONEDRIVE_SERVICE=onedrive-upload.service

# Backup Configuration (Optional - defaults provided)
BACKUP_RETENTION_DAYS=5
ZSTD_LEVEL=3

# System Monitoring Thresholds (Optional - defaults provided)
CPU_THRESHOLD=85
RAM_THRESHOLD=90
DISK_THRESHOLD=90

# Media Download Configuration (Optional - defaults provided)
THREADS=4
JOBS=4